rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow read/write access to all users under any path
      allow read, write: if true;
      // Optional: Add size limit
      // allow write: if request.resource.size < 5 * 1024 * 1024; // 5MB
    }
  }
} 